<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="com.slusarzwozniak.model.Worker" table="worker">
      <meta attribute="class-description">
        This class contains the worker detail. 
      </meta>
      <id name="id" type="int" column="ID">
         <generator class="native"/>
      </id>
      <many-to-one name="PersonalData" column="PersonalDataID"
       class="com.slusarzwozniak.model.PersonalData" not-null="true"/>
  </class>
</hibernate-mapping>
